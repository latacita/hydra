<plugin>

   <extension point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipse.emf.ecore.Wizard.category.ID"
            name="%_UI_Wizard_category"/>
      <wizard
            id="featureModel.presentation.FeatureModelModelWizardID"
            name="%_UI_FeatureModelModelWizard_label"
            class="featureModel.presentation.FeatureModelModelWizard"
            category="org.eclipse.emf.ecore.Wizard.category.ID"
            icon="icons/full/obj16/FeatureModelModelFile.gif">
         <description>%_UI_FeatureModelModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
   </extension>

   <extension point="org.eclipse.ui.editors">
      <editor
            id="featureModel.presentation.FeatureModelEditorID"
            name="%_UI_FeatureModelEditor_label"
            icon="icons/full/obj16/emf_diagram.png"
            extensions="hydra"
            class="featureModel.presentation.FeatureModelEditor"
            contributorClass="featureModel.presentation.FeatureModelActionBarContributor">
      </editor>
   </extension>

</plugin>
